#!/bin/sh

# Function to print system information
conf() {
  printf "
  (\ /)    kr  $(uname -r | awk -F '-' '{print $1}')
  ( · ·)   os  $(uname -o)
  c(")(")  sh  $(basename $SHELL)
  \n"
}

# Function to perform some action (you can replace with actual logic)
make_something() {
  echo "Making something..."
  # Replace with actual make command if needed
  # Example: make
}

# Print system information
conf

# Call function to perform action
make_something
